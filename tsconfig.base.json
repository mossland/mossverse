{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noPropertyAccessFromIndexSignature": false,
    "importHelpers": false,
    "target": "es2016",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@decentverse/client": ["libs/decentverse/client.ts"],
      "@decentverse/server": ["libs/decentverse/server.ts"],
      "@epochxy/*": ["apps/epochxy/*"],
      "@mossland/*": ["apps/mossland/*"],
      "@platform/client": ["libs/platform/client.ts"],
      "@platform/server": ["libs/platform/server.ts"],
      "@shared/client": ["libs/shared/client.ts"],
      "@shared/server": ["libs/shared/server.ts"],
      "@util/client": ["libs/util/client.ts"],
      "@util/server": ["libs/util/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
